    {
        ViewBag.DlugoscSiatki = 10;
    }
    @if (i % ViewBag.DlugoscSiatki == 0)
    {
        <div style="clear:both"></div>

    }

    

    


    if (Model.ElementAt(i).Osiagalny == true)
    {
    <div class="oneButton" id="@Model.ElementAt(i).Id">
