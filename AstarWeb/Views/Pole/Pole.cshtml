            <div class="G">@Html.DisplayFor(modelItem => Model.ElementAt(i).G)</div>
            <div class="H">@Html.DisplayFor(modelItem => Model.ElementAt(i).H)</div>

            <div class="Rodzic"> Id= @Html.DisplayFor(modelItem => Model.ElementAt(i).Id) </div>


        </button>
    </div>
